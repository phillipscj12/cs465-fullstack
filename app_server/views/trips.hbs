{{> header title="Trips"}}

<main class="container" style="padding:1rem 0;">
  <h1>Trips</h1>

  {{#if trips.length}}
    <ul style="list-style:none; padding:0; display:grid; gap:1rem; grid-template-columns: repeat(auto-fill,minmax(220px,1fr));">
      {{#each trips}}
        <li style="border:1px solid #ddd; border-radius:8px; overflow:hidden;">
          <img src="{{image}}" alt="{{title}}" style="width:100%; height:140px; object-fit:cover;">
          <div style="padding:.75rem;">
            <h3 style="margin:.25rem 0 .5rem 0;">{{title}}</h3>
            <p style="margin:0 0 .5rem 0;"><strong>{{plural nights "night"}}</strong> — {{currency price}}</p>
            <p style="margin:0 0 .5rem 0; color:#555;">{{summary}}</p>
            <a href="/trips/{{code}}" style="text-decoration:none;">View details</a>
          </div>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No trips available yet.</p>
  {{/if}}
</main>

{{> footer}}
